---
// Component Imports
import BaseLayout from '../layouts/BaseLayout.astro';


// You can import components from any supported Framework here!
// import Index from './index.vue';
import ButtonNavigation from '../components/UI/ButtonNavigation.vue'
// import SubNav from '../components/UI/SubNav.vue'
import TextBox from '../components/UI/TextBox.vue';

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'Timber Computer';

// TextBox input
let textBoxHeading = 'Welcome';

let textBoxContent = 'Timber Computer helps you understand the potential carbon impact of a future design by configuring a reference building.';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---


<!-- Use defined layout component like in vue -->
<BaseLayout title={ title }>

    <!-- <div slot="subnav">
        <SubNav/>
    </div> -->

    <div slot="main" class="flex flex-col flex-1 px-body h-full">
        <TextBox heading={textBoxHeading} content={textBoxContent}/>

        <!-- @raffael : mb-800 warum hier? â†“ -->
        <div class="mt-auto pb-body">
            <ButtonNavigation button-l="Compute" button-r="Learn" href-l="/compute" href-r="/learn"/>
        </div>
    </div>

</BaseLayout>
