---

import { getAllPagesWithSlugs } from '../../lib/api';
// Component Imports
import BaseLayout from '../../layouts/BaseLayout.astro';

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
import ButtonNavigation from '../../components/UI/ButtonNavigation.vue';
import Header from '../../components/UI/Header.vue';
import Footer from '../../components/UI/Footer.vue';

let title = 'Learn';
const getPages = await getAllPagesWithSlugs();
const pages    = getPages.data;
let bodyClass = 'bg-gold';
---

<BaseLayout title={ title } bodyClass={bodyClass}>

    <Header slot="header" link-to="/computer" link-name="Start to Compute" header-class="border-b"/>

    <div slot="main">
        <section class="flow-200 px-body">
            <ButtonNavigation pages={ pages } button-style={ 'btn--outline' } learn client:only/>
        </section>
    </div>

    <Footer slot="footer" footer-class="mt-1100"/>

</BaseLayout>
