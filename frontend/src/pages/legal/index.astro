---

// Import content function
import { getAllLegalsWithSlugs } from '@lib/api';

// BaseLayout Import
import BaseLayout from '@layouts/BaseLayout.astro';

// Component Import
import ButtonNavigation from '@components/UI/ButtonNavigation.vue';
import Header from '@components/UI/Header.vue';
import Footer from '@components/UI/Footer.vue';

let title = 'Legal';
const getLegals = await getAllLegalsWithSlugs();
const pages    = getLegals.data;
let bodyClass = 'bg-gold';

---

<BaseLayout title={ title } bodyClass={bodyClass}>

    <Header slot="header" link-to="/computer" link-name="Start to Compute" header-class="border-b mb-200"/>

    <div slot="main">
        <section class="flow-200 px-body">
            <ButtonNavigation pages={ pages } button-style={ 'btn--outline' } style={ 'outline' } />
        </section>
    </div>

    <Footer slot="footer" footer-class="mt-1100"/>

</BaseLayout>
